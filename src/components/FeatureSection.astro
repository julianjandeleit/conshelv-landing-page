---
// @ts-expect-error
import { site } from "../data.yaml";

interface Section {
  title: string;
  img: string;
  paragraphs: string[];
}

interface Cta {
  text: string;
  href: string;
}

interface Props {
  sections?: Section[];
  cta?: Cta;
}

const { sections = site.sections as Section[], cta = site.cta as Cta} = Astro.props;
---

<div
  class="pb-5 bg-neutral text-neutral-content content-center p-4 py-16 mx-auto md:p-10 md:pb-5"
>
<a href="#features"><h1
    id="features" 
    class="text-5xl antialiased font-semibold leading-none text-center mb-14"
  >
    {site.sections_header}
  </h1></a>
  <div class="flex flex-row flex-wrap content-center justify-around">
    {
      sections.map(({ title, img, paragraphs }) => (
        <div class="flex justify-center p-8 my-4 grow-0 shrink max-md:p-2">
          <div class="flex flex-col md:flex-row md:max-w-xl rounded-lg bg-base-100 shadow-lg">
            <img
              class=" w-full h-96 md:h-auto object-cover md:w-48 rounded-t-lg md:rounded-none md:rounded-l-lg"
              src={img}
              alt=""
            />
            <div class="p-8 flex flex-col justify-between">
              <div class="flex-auto text-justify tracking-tight flex-wrap">
                <h5 class="text-gray-900 text-2xl font-bold mb-2 text-left">
                  {title}
                </h5>
                {paragraphs.map((par) => (
                  <p class="text-gray-700 text-base mb-4">{par}</p>
                ))}
                
              </div>
              <a class="place-self-end w-[100%]" href={cta.href}><div class="btn btn-accent w-[100%]">{cta.text}</div></a>
              </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
