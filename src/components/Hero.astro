---
import Divider from "./Divider.astro";
interface Props {
  title: string;
  short: string;
  cta_text: string;
  cta_href?: string;
  image?: string;
}

const {
  title = "Title",
  short = "short description",
  cta_text = "cta text",
  cta_href = "#contact",
  image = "https://images.unsplash.com/photo-1497942304796-b8bc2cc898f3?ixlib=rb-1.2.1&q=85&fm=jpg&crop=entropy&cs=srgb&w=1200",
} = Astro.props;
---

<div class="min-h-[80vh] h-[80vh] bg-cover bg-center bg-no-repeat max-md:h-[92vh]" style={`background-image: url(${image})`}>
  <div class="flex flex-col justify-between items-center h-full bg-primary bg-opacity-70">
    <slot name="top">
      
    </slot>
    <div class="text-neutral-content h-full p-4">
      <div class="flex flex-col justify-center text-center max-w-4xl h-full">
        <h1 class="font-manrope mb-2 text-3xl font-extrabold text-base-100 max-md:text-xl max-md:mb-0" set:html={title}></h1>
        <p class="font-manrope mb-16 text-base-100 font-[450] text-center tracking-tight text-2xl max-md:text-base max-md:mb-8" set:html={short}></p>
        <a href={cta_href} class="inline-block"><button class="btn btn-accent btnManagement-block text-accent-content text-lg px-24 max-md:text-sm w-full">{cta_text}</button></a>
      </div>
    </div>
    <slot name="bottom">

    </slot>
  </div>
</div>
